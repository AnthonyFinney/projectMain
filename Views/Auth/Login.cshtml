@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<div class="d-flex align-items-center justify-content-center flex-column custom-height">
    <form asp-action="Login" method="post" class="">
        <h2 class="mb-4">Login</h2>

        <div class="form-group mb-3">
            <label for="name" class="form-label">Name</label>
            <div class="input-group">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login In</button>
    </form>

    <div class="mt-3">
        <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Sign up</a></p>
    </div>
</div>